<Window x:Class="WpfApp.WindowPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="WindowPopUp" Height="100" Width="310">
    <Grid Height="NaN" Margin="0,0,0,-6" Width="NaN">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="637*"/>
            <ColumnDefinition Width="61*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Height="28" Margin="10,27,0,0" TextWrapping="Wrap" Text="Upload the text for questions:" VerticalAlignment="Top" Width="166" Grid.ColumnSpan="2"/>
        <Button Content="Select the file" HorizontalAlignment="Left" Margin="166,24,0,0" VerticalAlignment="Top" Height="22" Width="95" Grid.Column="1" Click = "SelectFile_Click"/>

    </Grid>
</Window>
